<Window x:Class="Practice1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практика 1 — Многопоточность" Height="520" Width="800">
    <Grid Margin="8">
        <TabControl>
            <TabItem Header="1. Запуск процесса">
                <Grid Margin="8">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="760">
                        <WrapPanel Margin="0,0,0,8">
                            <Button x:Name="BtnStartNotepad" Width="140" Height="30" Margin="0,0,8,0">Запустить notepad.exe</Button>
                            <Button x:Name="BtnKillNotepad" Width="140" Height="30">Завершить notepad</Button>
                        </WrapPanel>
                        <Label x:Name="LblProcessStatus" Content="Статус: Не запущен" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="2. Загрузка файла">
                <Grid Margin="8">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="760">
                        <WrapPanel Margin="0,0,0,8">
                            <Button x:Name="BtnOpenFile" Width="120" Height="30" Margin="0,0,8,0">Открыть файл</Button>
                            <Button x:Name="BtnStartLoad" Width="120" Height="30" Margin="0,0,8,0">Загрузить</Button>
                            <Button x:Name="BtnStopLoad" Width="120" Height="30">Остановить</Button>
                        </WrapPanel>
                        <ProgressBar x:Name="PbLoad" Height="20" Width="760" Minimum="0" Maximum="100" Margin="0,0,0,8"/>
                        <Label x:Name="LblLoadStatus" Content="Готов" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="3. Синхронизация (lock)">
                <Grid Margin="8">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="760">
                        <WrapPanel Margin="0,0,0,8">
                            <Button x:Name="BtnStartLock" Width="160" Height="30" Margin="0,0,8,0">Запустить инкремент</Button>
                            <Button x:Name="BtnResetLock" Width="100" Height="30">Сброс</Button>
                        </WrapPanel>
                        <Label x:Name="LblCounter" Content="Счетчик: 0" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="4. SemaphoreSlim">
                <Grid Margin="8">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="760">
                        <WrapPanel Margin="0,0,0,8">
                            <Button x:Name="BtnStartSemaphore" Width="160" Height="30" Margin="0,0,8,0">Запустить обработку</Button>
                            <Button x:Name="BtnResetSemaphore" Width="100" Height="30">Сброс</Button>
                        </WrapPanel>
                        <ProgressBar x:Name="PbSemaphore" Height="20" Width="760" Minimum="0" Maximum="10" Margin="0,0,0,8"/>
                        <Label x:Name="LblSemaphore" Content="Готов" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
